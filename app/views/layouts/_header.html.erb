<header>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "The Book Nook", root_path, id:"logo",class:"navbar-brand" %>
        <!--<a class="navbar-brand" href="#">Brand</a>-->
      </div>
  
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Cart", "/cart" %></li>
          <li><%= link_to "Items", "/items" %></li>
          <li><%= link_to "Contact", contact_path %></li>
        </ul>
        
        <ul class="nav navbar-nav navbar-right">
          <!--navbar cart display -->
          <li><p id = "cartmoney" style="padding-top:8px">
          <%if !session[:cart].blank? %>
          <% cart = session[:cart]%>
          <% if !cart.empty? %>
          <% total = 0 %>
          <% totalquantity = 0 %>
          <% cart.each do |id, quantity| %>
          <% if Item.exists?(id)
                  item = Item.find_by_id(id)%>
                  <% number_to_currency(item.price, :unit =>"€") %>
                  <% number_to_currency(quantity * item.price, :unit =>"€") %>
                  <% total += quantity * item.price %> 
                  <% totalquantity += quantity %>
                    <% end %>
              <%end%>
              <button type="button" class="btn btn-default btn-m">
            <span class="glyphicon glyphicon-shopping-cart"></span> Cart (<%= totalquantity %>) <%= number_to_currency(total, :unit => "€") %>
        </button>
          <% end %></p></li>
          <% end %>
           <!-- end of navbar cart display -->
          <% if logged_in? %>
            <!--<li><%= link_to "Users", users_path %></li>-->
            <li><%= link_to "My Orders", orders_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My account <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
        <%= render 'layouts/search' %>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
