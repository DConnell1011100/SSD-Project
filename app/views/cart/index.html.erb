<% provide(:title, "Cart") %>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
  <% if !@cart.empty? %>
  <h1 class="text-center">Cart</h1>
    <table class="table">
      <% total = 0 %>
      <thead>
       <tr class="success">
         <!-- Table Headers for Cart-->
          <th>#</th>
          <th>Title</th>
          <th></th>
          <th></th>
          <th>Price</th>
          <th>Qty.</th>
          <th>Sub-total</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
      
      <tbody>
        
          <% @cart.each do |id, quantity| %>
            <tr class="active">
              
              <!-- check if the item exists to avoid throwing an error and breaking the session cart -->
              <% if Item.exists?(id)
                  item = Item.find_by_id(id)%>
                  <!-- if item !exist, nothing will happen to alter the cart -->
              <td><div class="text-center"><%= link_to (image_tag item.image_url, :style =>"height:80px;"), item %></div></td>
              <td><h3><%= link_to item.title, item %></h3></td>
              <td> <a href="/cart/increase/<%= item.id %>"><h3 style="text-align:center;"><span class="glyphicon glyphicon-plus"></span></h3></a></td>
              <td><a href="/cart/decrease/<%= item.id %>"><h3 style="text-align:center;"><span class="glyphicon glyphicon-minus"></span></h3></a></td>
              <td><h3><%= number_to_currency(item.price, :unit =>"€") %></h3></td>
              <td><h3><%= quantity %></h3></td>
              <td><h3><%= number_to_currency(quantity * item.price, :unit =>"€") %></h3></td>
              <td class="text-center"><h3><a href="/cart/remove/<%= item.id %>" class="btn btn-md btn-danger" style= "color: white;">Remove</a></h3></td>
              <% total += quantity * item.price %> 
              <% end %>
            </tr>
            
          <% end %>
        <tfoot>
          <tr>
            <td colspan="6"><h2 class="text-right"><b>Grand Total # </b></h2></td>
            <td colspan="2"><h2 class="text-left"><b><%= number_to_currency(total, :unit => "€") %></b></h2></td>
          </tr>
        </tfoot>
      </tbody>
    </table>
  <%end%>
  
   <!-- these design for checkout -->
  <% if @cart.empty? %>
     <h1 class="text-center"> Your cart is empty! </h1>
     <div class="text-center"><%= link_to "Vist the Catalogue", items_path, class: 'btn btn-md btn-primary' ,style: 'color: white;'%></div>
  <%else%>
    <div class="container text-center" style="margin-top:25px;">
      <%= link_to "Continue Shopping", items_path, class: 'btn btn-md btn-primary' ,style: 'color: white;'%>
      
      <!-- User must be logged in to check out -->
      <% if logged_in? %>
      <%= link_to "Checkout", checkout_path, class: 'btn btn-md btn-success',style: 'color: white;' %>
      <% else %>
      <%= link_to "Log In", login_path, class: 'btn btn-md btn-success',style: 'color: white;' %>
      <% end %>
      
      <%= link_to "Empty Cart", clearcart_path, class: 'btn btn-md btn-danger',style: 'color: white;' %>
    </div>
  <%end%>
  <!-- end of check link -->
</div>