<% provide(:title, "Cart") %>
 <% if !@cart.empty? %>
<h1>Cart</h1>
 <% end %>
<p id="notice"><%= notice %></p>
<div id="itemsContainer">
 <table id="customers">
 <% total = 0 %>
 <% if !@cart.empty? %>
 <tr>
  <td></td>
  <td>Title</td>
  <td>Increase Qty</td>
  <td>Decrease Qty</td>
  <td>Item Price</td>
  <td>Quantity</td>
  <td>Total Price</td>
  <td></td>
 </tr>
 <% end %>
 <% @cart.each do |id, quantity| %>

 <% item = Item.find_by_id(id) %>
 <tr>
 <td><div class="image"> <%= link_to (image_tag item.image_url, :style =>"height:40px"), item %></div></td>
 <td class="title"><%= link_to item.title, item %></td>
 <td> <a href="/cart/increase/<%= item.id %>"><b>+</b></b></a></td>
 <td><a href="/cart/decrease/<%= item.id %>"><b>-</b></a></td>
 <td class="price"><%= number_to_currency(item.price, :unit =>"€") %></td>
 <td class="quantity"><%= quantity %></td>
 <td class="price"><%= number_to_currency(quantity * item.price, :unit =>"€") %></td>
 <td><a href="/cart/remove/<%= item.id %>">Remove From Cart</a></td>
 </tr>

 <% total += quantity * item.price %>
 <% end %>


 </table>
