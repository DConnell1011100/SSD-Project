<% provide(:title, @user.name) %>
<div class="container-fluid">
  <div class="row">

        <h1 class="text-center"> Welcome, <%= @user.name %>   

        <%= gravatar_for @user %></h1>
        

        
        <% if @user.orders.present?%>
<div class="row">
    <div class="table-responsive">
        
        <h1 class="text-center">Your lase order details.</h1>
        <table class="table">
            <thead>
                <tr class="success">
                    <th colspan="2">
                        <h4>Name # <%= @user.name %></h4>
                        <h5>Address # <%= @user.email %></h5>
                    </th>
                    <th colspan="2">
                        <h5>Order no # <%= @user.orders.last.id %></h5>
                        <h5>Order Date # <%= @user.orders.last.order_date %></h5>
                        <h5>Order Status # <%= @user.orders.last.status %></h5>
                    </th>
                </tr>
                <tr class="success">
                    <th>Title</th>
                    <th>Qty.</th>
                    <th>Price</th>
                    <th class="text-right">Sub-total</th>
                </tr>
            </thead>
            <tbody>
                <% @countItem = 0 %>
                <% @total = 0 %>
                <% @user.orders.last.orderitems.each do |id,quantity| %>
                    <tr>
                        <% item = Orderitem.find_by_id(id) %>
                        <td><%= item.title %></td>
                        <td><%= item.quantity %></td>
                        <td><%= number_to_currency(number_with_precision(item.price, :precision => 2), :unit => "€")%></td> 
                        <td class="text-right"><%= number_to_currency(number_with_precision(item.quantity * item.price, :precision => 2), :unit => "€") %></td>
                        <% timx = (item.quantity * item.price)%>
                        <% @countItem += item.quantity %>
                        <% @total += timx %>
                     </tr>
                <% end %>
            </tbody>
            <tfoot>
                <tr class="success">
                    <th colspan="1" style="text-align:right"> <h3>Total Qty. # <%= @countItem %></h3> </th>
                    <th colspan="3" style="text-align:right"> <h3>Total # <%= number_to_currency(number_with_precision(@total, :precision => 2), :unit => "€") %></h3> </th>
                </tr>
            </tfoot>
        </table>
        <% if @user.orders.last.status.eql? "Pending" %>
            <h5 class="text-right"><%= render'orders/paypal_link' %></h5>
        <%end%>
        
        <div class="text-center" style="margin:25px auto;">
            <% if @user.orders.last.status.eql? "Pending" %>
                <%= link_to "Edit", edit_order_path(@user.orders.last), class: 'btn btn-lg btn-warning' ,style: 'color: white;'%>
                <%= link_to "Delete", order_path(id: @user.orders.last.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-lg btn-danger',style: 'color: white;' %>
            <%end%>
        </div>
    </div>
</div>

<% else %>
        <h1 class="text-center">You do not have any orders to display.</h1>

<% end %>

        <div class="container-md profile-cont">
        <h3>To update your profile, please click on the button below</h3>
            <%= link_to "Update Profile", edit_user_path(current_user), 
            class: 'btn btn-md btn-primary pull-right'%>
        </div >
        
        <br>
        
        <div class="container-md profile-cont">
          <h3>To view your previous orders, please click on the button below</h3>
              <%= link_to "My Orders", orders_path, 
              class: 'btn btn-md btn-success pull-right' %>
  
        </div>
        
        <br>
        
    </div>
  </div>
</div>

