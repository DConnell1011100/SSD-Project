<div class="row">
  <% if @items.length == 0 %>
      <h2 class="text-center">No products were found matching your search</h2>
  <% else %>
      <% item = @items.last %>
      <% if @search_criteria.eql? "All" %>
        <h1 class="text-center">Search results for: <%= @search_criteria %></h1>
      <% else %>
        <h1 class="text-center">Search results for: <%= item.title %></h1>
      <%end%>
      <%= render 'items/catalogue'%>
  <% end %>
</div>

<%= will_paginate @items %>
