<p id="notice"><%= notice %></p>



 <div id="itemsContainer">
   <h1><%= @item.title %></h1>
   <%= image_tag @item.image_url, :class => 'welcomIm'  %>
       <h2><%= @item.description %></h1>
   
    <div class="itemhols">
       <p>
        Author: <%= @item.author %>
      <br>
        Price: <%= number_to_currency(@item.price, :unit => "â‚¬") %>
       <br>
        Category: <%= @item.category %>
        </p>
        <% if logged_in? %>
         <% if current_user.admin? %>
       <p>Current Stock: <%= @item.stock %></p>
       <% if @item.stock <= 0 %>
       <p> Out of Stock!</p>
       <% end %>
       <% end %>
       <% end %>
       <%if @item.stock_limit %>	
                <%= link_to 'Out of stock', cart_add_path(@item.id), :class => "btn btn-md btn-danger disabled", :disabled => true %>	
            <% else %>	
               <button class="btn btn-md btn-primary btn" type="button" data-toggle="modal" data-target="#myModal" onclick="confirmAdd('<%= @item.id%>', 	
               '<%= @item.title%>')">Add to cart</button>	
            <!-- Start of Modal -->	
            <div id="myModal" class="modal fade" role="dialog">	
              <div class="modal-dialog">	
                <div class="modal-content">	
                  <div class="modal-header">	
                    <button type="button" class="close" data-dismiss="modal">&times;</button>	
                    <h4 class="modal-title">Added to Cart</h4>	
                  </div>	
                  <div class="modal-body">	
                    <p>Item was added to your cart!</p>	
                  </div>	
                  <div class="modal-footer">	
                      <button type="button" class="btn btn-default" data-dismiss="modal">Continue Shopping</button>	
                    <%= link_to 'Checkout', "cart/", :class => "btn btn-default" %>	
                  </div>	
                </div>	
              </div>	
            </div>	
            <% end %>	
       <p>
        
         <%= link_to 'Back to Catalogue',  items_path, :class => "button", :role => "button" %>
         <% if logged_in? %>
         <% if current_user.admin? %>
         <%= link_to 'Edit',  edit_item_path(@item), :class => "button", :role => "button" %>
         <% end %>
       <% end %>
         
       </p>
        <% @item.score.to_i.times do  %>
        <span class="glyphicon glyphicon-star"></span>
       <% end %><% @item.blank_stars.times do %>
       <span class="glyphicon glyphicon-star-empty"></span>
      <% end %>
      </div>
   <% if logged_in? %>
   <%= render partial: 'reviews/form' %>
   <% else %>
   <h3> Login to review this book</h3>
   <% end %>
   
   <h3>Reviews (<%= @item.reviews.size %>)</h3>
   
   <%= render partial: 'items/review', collection: @item.reviews %>
   
   
   </div>