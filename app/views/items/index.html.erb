<% provide(:title, "Items") %>

<p id="notice"><%= notice %></p>

<div class="row">
  <h1 class="text-center">Full Catalogue</h1>
  <ul class="nav nav-tabs card-header-tabs">
  <li class="nav-item">
    <%= link_to "Recent", expensive_items_path, class: "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to "Oldest", cheapest_items_path, class: "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to "Upvoted", bestrated_items_path, class: "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to "Downvoted", lowestrated_items_path, class: "nav-link active" %>
  </li>
    </ul>
      <% @items.each do |item| %>
         <div class="col-sm-4 col-md-4 col-lg-4">
            <h3 class="item-title"><%= item.title %></h3>
            <p><%= link_to (image_tag item.image_url, :class => "", :size=>"280x400"), item %></p>
            <h4>Author: <%= item.author %></h4>
            <h4>Price: <%= number_to_currency(item.price, :unit => "â‚¬") %></h4>
            <h4>Category: <%= item.category %></h4>
            <p> Ratings: <% item.score.to_i.times do  %>
        <span class="glyphicon glyphicon-star"></span>
       <% end %><% item.blank_stars.times do %>
       <span class="glyphicon glyphicon-star-empty"></span>
      <% end %> (<%= item.reviews.size %>) </p>
      <p>Current Stock: <%= item.stock %></p>
      <%= form_for item, remote: true do |f| %>
         <div class="field">
          <%= f.label :stock %>
          <%= f.text_field :stock %>
        </div>

          <div class="actions">
          <%= f.submit 'Update Stock'%>
        </div>
      <% end %>
         <p>
            <%= link_to 'Show',  item, :class => "btn btn-md btn-success", :role => "button" %>
            <%if item.stock_limit %>
                <%= link_to 'out of stock', :class => "btn btn-md btn-danger" %>
            <% else %>
               <p><%= link_to 'Add to cart', cart_add_path(item.id), :class => "btn btn-md btn-primary" %></p>
            <% end %>
         </p>
         <p>
            <%= link_to 'Edit',  edit_item_path(item), :class => "btn btn-md btn-warning", :role => "button" %>
            <%= link_to 'Destroy',  item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-md btn-danger", :role => "button" %>
         </p>
         </div>
      <% end %>
      
<p><%= link_to 'New Item',  new_item_path, :class => "btn btn-md btn-primary", :role => "button" %>[Admin funtion : ]</p>

