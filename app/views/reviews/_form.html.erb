<div class="col-md-12">
  <h3>Leave a Review</h3>
  
  <%= form_for [ @item, @review ] do |f| %>
    <h4>
          <%= f.label :author_name, current_user.name   %><br/>
          <%= f.hidden_field :author_name, :value => current_user.name %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
    </h4>
    <p>
      <%= f.label :rating, "Rating" %>
      <div class="wrapper">
        <%=f.radio_button :rating, 5, :id => "star5" %><label for="star5"><span class="glyphicon glyphicon-star"></span></label>
        <%=f.radio_button :rating, 4, :id => "star4" %> <label for="star4"><span class="glyphicon glyphicon-star"></span></label>
        <%=f.radio_button :rating, 3, :id => "star3" %> <label for="star3"><span class="glyphicon glyphicon-star"></span></label>
        <%=f.radio_button :rating, 2, :id => "star2" %> <label for="star2"><span class="glyphicon glyphicon-star"></span></label>
        <%=f.radio_button :rating, 1, :id => "star1" %> <label for="star1"><span class="glyphicon glyphicon-star"></span></label>
      </div>
    </p>
    <h5>
      <%= f.label :body, "Your Comment" %>
    </h5>
    <h5>
      <%= f.text_area :body, placeholder: "Your comment must be more than 10 charcters"  %>
    </h5>
    <h4>
      <%= f.submit 'Submit', class: "btn btn-md btn-success" %>
    </h4>
  <% end %>
</div>