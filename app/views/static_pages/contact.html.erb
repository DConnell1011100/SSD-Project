<% provide(:title, "Contact") %>



<div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="panel panel-default well">
          <div class="panel-body">
            <%= form_for(contact, html: {class: "form-horizontal"}) do |f|%>
              <% if contact.errors.any? %>
                <div id="error_explanation">
                  <h4><%= pluralize(contact.errors.count, "error") %> prohibited this item from being saved:</h4>
                  <ul>
                  <% contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>            
                <div class="form-group">               
                    <div class="col-sm-12">
                        <%= f.label :title %>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            <input type="text" class="form-control" id="inputName" placeholder="Enter your name">
                        </div>
                    </div>                
                </div>

                <div class="form-group">               
                    <div class="col-sm-12">
                        <%= f.label :title %>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <input type="email" class="form-control" id="inputEmail1" placeholder="Enter email">
                        </div>
                    </div>                
               </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        <%= f.label :title %>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>                      
                            </div>
                            <input type="text" class="form-control" placeholder="Phone">
                        </div>                                    
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-12">
                        <%= f.label :title %>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-comment fa-2"></i>                
                            </div>                  
                            <textarea class="form-control" name="Comments" placeholder="Enter your message here"></textarea>
                        </div>                                    
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success btn-lg">Contact us</button>
                    </div>
                </div>
                
                <div class="form-group">               
                    <div class="col-sm-12">
                        <%= f.label :title %>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-header"></i>
                            </div>
                            <%= f.text_field :title,class: "form-control", placeholder: "Enter your title", autofocus: true %>
                        </div>
                    </div>                
                </div>
                
                <div class="form-group">
                    <div class="col-sm-12">
                        <%= f.label :description %>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-comment fa-2"></i>
                            </div>                  
                            <%= f.text_area :description,class: "form-control", row: "5", placeholder: "Enter your description", autofocus: true %>
                        </div>                                    
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-12">
                        <%= f.submit "Add category", class: "btn btn-success btn-lg" %>
                    </div>
                </div>
            <%end%>
          </div><!-- end panel-body -->
        </div><!-- end panel -->
      </div><!-- end col-md-8 -->
      <!--<div class="col-md-2"></div>-->
    </div>






